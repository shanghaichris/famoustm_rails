<h2><%= title  t("devise.registrations.link")  %></h2>

<%= form_for(resource_name, resource, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_messages %>
  <%= f.label  :email,t("devise.elements.email") %><br/>
  <%= f.text_field :email %><p/>

  <%= f.label :password, t("devise.elements.password") %><br/>
  <%= f.password_field :password %><p/>

  <%= f.label :password_confirmation, t("devise.elements.password_confirm") %><br/>
  <%= f.password_field :password_confirmation %><p/>

  <%= f.submit t("devise.registrations.link") %><p/>
<% end %>

<%= render :partial => "devise/shared/links" %>
